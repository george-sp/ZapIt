<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.codeburrow.zapit.DetailActivity">

        <TextView
            android:id="@+id/detail_slug_label_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/white"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Slug"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/detail_slug_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="mSlug"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/detail_name_label_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/white"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/detail_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="mName"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/detail_price_label_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/white"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/detail_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="mPrice"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/detail_description_label_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/white"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/detail_description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="mDescription"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/detail_payed_label_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/white"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Payed"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/detail_payed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="mPayed"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/request_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="intentPaymentActivity"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/holo_green_light"
            android:text="BUY IT"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>
    </LinearLayout>

</ScrollView>